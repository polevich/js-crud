{{#with data.products}}
  {{#each list}}
    <div class='card'>
      <div class='card__content'>
        <h1 class='card__title'>{{name}}</h1>
        <span class='card__description'>{{description}}</span>
        <p class='card__id'>{{id}}</p>
      </div>
      <div class='card__action'>
        <strong class='card__price'>{{price}}</strong>
        <a href='/product-edit?id={{id}}'>Редактировать</a>
      </div>
    </div>
  {{/each}}
{{/with}}