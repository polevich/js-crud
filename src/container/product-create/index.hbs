<main>
  <section>
    <div class='form'>
      <h1 class='form__title'>Информация про товар</h1>
      <form method='POST' action='/product-create'>
        <div class='form__content'>
          <div class='form__two'>
            <div class='form__field'>
              <label for='text' class='form__label'>Название товара:</label>
              <input type='text' name='name' class='form__input' />
            </div>
            <div class='form__field'>
              <label for='number' class='form__label'>Цена:</label>
              <input type='number' name='price' class='form__input' />
            </div>
          </div>
          <div class='form__field'>
            <label for='text' class='form__label'>Короткое описание товара:</label>
            <textarea type='text' name='description' class='form__input' rows='4'></textarea>
            <span class='form__span'>Отображается в карточке товара</span>
          </div>
          <button class='form__button'>Создать товар</button>
        </div>
      </form>
    </div>
  </section>

</main>

