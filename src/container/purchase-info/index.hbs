<main class="main">
  {{> heading title="Информация про заказ"}}
	{{#with data}}
		 
			<div class='purchase-info'>
				<div class='purchase-info__block'>
					<span class='title'>ID:</span>
					<span class='text'>{{id}}</span>
				</div>
				<div class='purchase-info__block'>
					<div class="purchase-info__item">
						<span class='title'>Имя:</span>
						<span class='text'>{{firstname}}</span>
					</div>
					<div class="purchase-info__item">
						<span class='title'>Фамилия:</span>
						<span class='text'>{{lastname}}</span>
					</div>
					<div class="purchase-info__item">
						<span class='title'>Телефон:</span>
						<span class='text'>{{phone}}</span>
					</div>
					<div class="purchase-info__item">
						<span class='title'>Электронная почта:</span>
						<span class='text'>{{email}}</span>
					</div>
				</div>
				<div class='purchase-info__block'>
					<div class="purchase-info__item">
						<span class='title'>Название товара:</span>
						<span class='text'>{{product}}</span>
					</div>
					<div class="purchase-info__item">
						<span class='title'>Комментарий:</span>
						<span class='text'>{{comment}}</span>
					</div>
				</div>
				<div class='purchase-info__block'>
					<div class="purchase-info__item">
						<span class='title'>Стоимость товаров:</span>
						<span class='text'>{{productPrice}}</span>
					</div>
					<div class="purchase-info__item">
						<span class='title'>Стоимость доставки:</span>
						<span class='text'>{{deliveryPrice}}</span>
					</div>
					<div class="purchase-info__item">
						<span class='title'>Сумма к оплате:</span>
						<span class='text'>{{totalPrice}}</span>
					</div>
					<div class="purchase-info__item">
						<span class='title'>Насчитанные бонусы:</span>
						<span class='text'>{{bonus}}</span>
					</div>
				</div>
			</div>
		
	{{/with}}
	{{>button text="Изменить данные"}}
</main>